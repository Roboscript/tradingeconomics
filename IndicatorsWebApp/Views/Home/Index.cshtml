@model List<News>

@{
    ViewData["Title"] = "News DataTable";
}

<div class="container my-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title">Mexico and Sweden 2021/02/02 - 2022/03/03</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="newsTable" class="display table table-bordered table-striped table-hover table-sm" style="width:100%">
                    <thead class="thead-dark">
                        <tr>
                            <th>ID</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Description</th>
                            <th>Country</th>
                            <th>Category</th>
                            <th>Symbol</th>
                            <th>URL</th>
                            <th>Importance</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Title</td>
                                <td>@(item.Date.HasValue ? item.Date.Value.ToString("yyyy-MM-dd") : "N/A")</td>
                                <td style="text-align:justify;">@item.Description</td>
                                <td>@item.Country</td>
                                <td>@item.Category</td>
                                <td>@item.Symbol</td>
                                <td>
                                    <a href="@item.Url" target="_blank">View Link</a>
                                </td>
                                <td>@item.Importance</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Initialize DataTable -->
<script>
    $(document).ready(function () {
        $('#newsTable').DataTable({
            "paging": true, // Enable pagination
            "searching": true, // Enable search/filter feature
            "ordering": true, // Enable sorting by columns
            "info": true, // Show table information
            "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]], // Control page length
            "pageLength": 5 // Default number of rows to display
        });
    });
</script>
